<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Account Login</h3>
            </div>
            <img src="/img/logo.jpg" class="rounded-circle mx-auto -d-block m-4 logo">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Enter email" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Enter Password" required>
                    </div>
                    <button type="submit" class="btn btn-dark btn-block">
                        Sign In
                    </button>
                    <!--No account registered button-->
                    <a href="/users/signup" class="btn btn-outline-dark btn-block btn-sm">
                        No account registered? Click here!</a>
                </form>
            </div>
        </div>
    </div>
</div>